<Styles xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Styles.Resources>
    <ResourceDictionary>
      <!-- Custom ComboBox Template -->
      <ControlTemplate x:Key="CustomComboBoxTemplate" TargetType="ComboBox">
        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4">
          <Grid ColumnDefinitions="*,Auto">
            <ContentPresenter x:Name="PART_ContentPresenter" Content="{TemplateBinding SelectionBoxItem}" ContentTemplate="{TemplateBinding ItemTemplate}" Margin="{TemplateBinding Padding}" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="0"/>
            <Path x:Name="DropdownArrow" Data="M 0,0 L 8,8 L 16,0" Stroke="{TemplateBinding Foreground}" StrokeThickness="2" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="4,0,8,0" Grid.Column="1"/>
            <Popup x:Name="PART_Popup" IsOpen="{TemplateBinding IsDropDownOpen, Mode=TwoWay}" MinWidth="{Binding Bounds.Width, RelativeSource={RelativeSource TemplatedParent}}" Placement="Bottom">
              <Border Background="#006400" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="4">
                <ScrollViewer>
                  <ItemsPresenter x:Name="PART_ItemsPresenter" ItemsPanel="{TemplateBinding ItemsPanel}"/>
                </ScrollViewer>
              </Border>
            </Popup>
          </Grid>
        </Border>
      </ControlTemplate>
    </ResourceDictionary>
  </Styles.Resources>
  <!-- ComboBox Styles -->
  <Style Selector="ComboBox">
    <Setter Property="Width" Value="175"/>
    <Setter Property="Background">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Offset="0" Color="#228B22"/>
        <GradientStop Offset="1" Color="#006400"/>
      </LinearGradientBrush>
    </Setter>
    <Setter Property="BorderBrush" Value="#006400"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Foreground" Value="White"/>
    <Setter Property="Padding" Value="4"/>
    <Setter Property="Template" Value="{StaticResource CustomComboBoxTemplate}"/>
  </Style>
  <Style Selector="ComboBox:pointerover">
    <Setter Property="Background">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Offset="0" Color="#32CD32"/>
        <GradientStop Offset="1" Color="#228B22"/>
      </LinearGradientBrush>
    </Setter>
    <Setter Property="BorderBrush" Value="#228B22"/>
    <Setter Property="Foreground" Value="White"/>
  </Style>
  <Style Selector="ComboBox:selected">
    <Setter Property="Background">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Offset="0" Color="#228B22"/>
        <GradientStop Offset="1" Color="#006400"/>
      </LinearGradientBrush>
    </Setter>
    <Setter Property="BorderBrush" Value="#006400"/>
    <Setter Property="Foreground" Value="White"/>
  </Style>
  <Style Selector="ComboBox:dropdownopen">
    <Setter Property="Background">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Offset="0" Color="#228B22"/>
        <GradientStop Offset="1" Color="#006400"/>
      </LinearGradientBrush>
    </Setter>
    <Setter Property="BorderBrush" Value="#006400"/>
    <Setter Property="Foreground" Value="White"/>
  </Style>
  <Style Selector="ComboBox:selected:pointerover, ComboBox:dropdownopen:pointerover">
    <Setter Property="Background">
      <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
        <GradientStop Offset="0" Color="#32CD32"/>
        <GradientStop Offset="1" Color="#228B22"/>
      </LinearGradientBrush>
    </Setter>
    <Setter Property="BorderBrush" Value="#228B22"/>
    <Setter Property="Foreground" Value="White"/>
  </Style>
  <!-- ComboBoxItem Styles with High Specificity -->
  <Style Selector="ComboBox ComboBoxItem">
    <Setter Property="Foreground" Value="White"/>
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="Padding" Value="4"/>
  </Style>
  <Style Selector="ComboBox ComboBoxItem:selected">
    <Setter Property="Foreground" Value="Yellow"/>
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="Padding" Value="4"/>
  </Style>
  <Style Selector="ComboBox ComboBoxItem:pointerover:not(:selected)">
    <Setter Property="Foreground" Value="Cyan"/>
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="Padding" Value="4"/>
  </Style>
  <Style Selector="ComboBox ComboBoxItem:selected:pointerover">
    <Setter Property="Foreground" Value="Yellow"/>
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="Padding" Value="4"/>
  </Style>
</Styles>