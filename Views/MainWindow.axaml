<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:GulmayMC.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        d:DesignWidth="800"
        d:DesignHeight="450"
        x:Class="GulmayMC.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="GulmayMC">
  <Design.DataContext>
    <vm:MainWindowViewModel />
  </Design.DataContext>
  <Window.Styles>
    <!-- TabItem Styles -->
    <Style Selector="TabItem">
      <Setter Property="Background" Value="LightGray" />
    </Style>
    <Style Selector="TabItem:selected">
      <Setter Property="Background" Value="White" />
    </Style>
    <!-- NumericUpDown Style -->
    <Style Selector="NumericUpDown /template/ ButtonSpinner">
      <Setter Property="Template">
        <ControlTemplate>
          <DataValidationErrors>
            <Border Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="{TemplateBinding CornerRadius}"
                    MinHeight="{TemplateBinding MinHeight}"
                    Width="120">
              <DockPanel>
                <UniformGrid Rows="2" Name="PART_SpinnerPanel"
                             DockPanel.Dock="Right"
                             MinWidth="20"
                             IsVisible="{TemplateBinding ShowButtonSpinner}">
                  <RepeatButton Name="PART_IncreaseButton"
                                Classes="ButtonSpinnerRepeatButton"
                                VerticalContentAlignment="Center"
                                HorizontalContentAlignment="Center"
                                Padding="0"
                                Foreground="{TemplateBinding Foreground}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                Background="{TemplateBinding Background}"
                                FontSize="{TemplateBinding FontSize}">
                    <Image Source="/Assets/ArrowUpRed.png"
                           Width="20"
                           Height="20"
                           Stretch="Uniform"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center" />
                  </RepeatButton>
                  <RepeatButton Name="PART_DecreaseButton"
                                Classes="ButtonSpinnerRepeatButton"
                                VerticalContentAlignment="Center"
                                HorizontalContentAlignment="Center"
                                Padding="0"
                                Foreground="{TemplateBinding Foreground}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                Background="{TemplateBinding Background}"
                                FontSize="{TemplateBinding FontSize}">
                    <Image Source="/Assets/ArrowDownRed.png"
                           Width="20"
                           Height="20"
                           Stretch="Uniform"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center" />
                  </RepeatButton>
                </UniformGrid>
                <ContentPresenter Name="PART_ContentPresenter"
                                  ContentTemplate="{TemplateBinding ContentTemplate}"
                                  Content="{TemplateBinding Content}"
                                  HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                  VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                  Padding="{TemplateBinding Padding}"
                                  FontSize="30" />
              </DockPanel>
            </Border>
          </DataValidationErrors>
        </ControlTemplate>
      </Setter>
    </Style>
    <!-- Slider Style -->
    <Style Selector="Slider.custom">
      <Setter Property="Template">
        <ControlTemplate>
          <Grid>
            <Grid.RowDefinitions>
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <!-- Track Background -->
            <Border Name="PART_TrackBackground"
                    Grid.Row="1"
                    Background="LightGray"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="2"
                    Height="4"
                    VerticalAlignment="Center" />
            <!-- Track Fill (Progress) -->

            <!-- Track -->
            <Track Name="PART_Track"
                   Grid.Row="1"
                   Orientation="{TemplateBinding Orientation}"
                   Minimum="{TemplateBinding Minimum}"
                   Maximum="{TemplateBinding Maximum}"
                   Value="{TemplateBinding Value, Mode=TwoWay}"
                   IsDirectionReversed="{TemplateBinding IsDirectionReversed}"
                   IsEnabled="{TemplateBinding IsEnabled}">
              <Track.Thumb>
                <Thumb Name="PART_Thumb">
                  <Thumb.Template>
                    <ControlTemplate>
                      <Border Background="Transparent">
                        <Image Source="avares://GulmayMC/Assets/SliderThumbHorizontalWhite.png"
                               Width="40"
                               Height="20"
                               Stretch="Uniform"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" />
                      </Border>
                    </ControlTemplate>
                  </Thumb.Template>
                </Thumb>
              </Track.Thumb>
            </Track>
          </Grid>
        </ControlTemplate>
      </Setter>
    </Style>
  </Window.Styles>
  
  <TabControl>
    <TabItem Header="Basics">
      <StackPanel Margin="20" Spacing="10" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="{Binding Greeting}" FontSize="18" />
        <TextBlock Text="{Binding DynamicText}" FontSize="14" />
        <Button Content="Update Text" Command="{Binding UpdateTextCommand}" />
        <NumericUpDown Value="{Binding SelectedNumber, Mode=TwoWay}" Minimum="0" Maximum="100" Increment="1" />
        <ComboBox ItemsSource="{Binding Options}" SelectedItem="{Binding SelectedOption, Mode=TwoWay}" />
        <Slider Classes="custom" Value="{Binding SliderValue, Mode=TwoWay}" Minimum="0" Maximum="100" HorizontalAlignment="Stretch" />
        <ProgressBar Value="{Binding SliderValue}" Minimum="0" Maximum="100" Height="20" HorizontalAlignment="Stretch" />
        <TextBox Text="{Binding InputText, Mode=TwoWay}" Watermark="Enter text..." HorizontalAlignment="Stretch" />
        <CheckBox IsChecked="{Binding IsChecked, Mode=TwoWay}" Content="Enable Feature" />
        <Image Source="/Assets/sample.png" Width="100" Height="100" HorizontalAlignment="Center" />
        <Image Source="avares://GulmayMC/Assets/SliderThumbHorizontalWhite.png" Width="20" Height="20" HorizontalAlignment="Center" />
      </StackPanel>
    </TabItem>
    <TabItem Header="Advanced">
      <StackPanel Margin="20" Spacing="10" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="Advanced Features" FontSize="18" />
        <Button Content="Placeholder" />
      </StackPanel>
    </TabItem>
    <TabItem Header="Settings">
      <Grid Margin="20" RowDefinitions="Auto,Auto,*" ColumnDefinitions="*,*">
        <TextBlock Text="Item Name:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" />
        <TextBox Text="{Binding InputText, Mode=TwoWay}" Grid.Row="0" Grid.Column="1" />
        <Button Content="Add Item" Command="{Binding AddItemCommand}" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" />
        <ListBox ItemsSource="{Binding Items}" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2">
          <ListBox.ItemTemplate>
            <DataTemplate>
              <TextBlock Text="{Binding Name}" />
            </DataTemplate>
          </ListBox.ItemTemplate>
        </ListBox>
      </Grid>
    </TabItem>
  </TabControl>
</Window>